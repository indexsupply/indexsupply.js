{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "eventsource-platform-specific": ["./src/eventsource-node"]  // Directly point to the Node.js version for simplicity
    },
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}